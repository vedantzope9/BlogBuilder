<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlogBuilder</title>
    <link rel="icon" type="image/png" href="~/logo_BlogBuilder.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BlogBuilder.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Figtree:wght@400;600&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/Shared/_Layout.css" />

</head>
<body>
    <nav class="navbar navbar-expand-lg fixed-top">
        <div class="container-fluid px-4">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <img src="~/logo_BlogBuilder.png" alt="Logo" width="42" height="42" class="me-2" style="border-radius: 5px;" />
                BlogBuilder
            </a>

            <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navMenu">
                <ul class="navbar-nav me-3">
                    <li class="nav-item"><a class="nav-link" href="/User/Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Blog/Index">All Blogs</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">About</a></li>
                </ul>
            </div>
            <i class="fas fa-moon toggle-btn ms-3" id="themeToggle" title="Toggle Theme"></i>
        </div>
    </nav>

    <div class="container pt-5 mt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <p>© BlogBuilder — Designed and Developed by Vedant Zope</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    <!-- Quill and Scripts -->
    <script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>

    <script src="~/js/Shared/_Layout.js"></script>


    @RenderSection("Scripts", required: false)
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlogBuilder</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BlogBuilder.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <style>
        :root {
            --bg-dark: #1e1e1e;
            --text-dark: #f0f0f0;
            --feature-bg-dark: #2a2a2a;
            --footer-dark: #121212;
        }

        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        body.dark-mode {
            background: var(--bg-dark) !important;
            color: var(--text-dark);
        }

        .navbar {
            background: linear-gradient(to right, #a267e4, #8433c5);
        }

        .navbar-brand,
        .nav-link,
        .toggle-btn {
            color: #fff !important;
            font-weight: 500;
        }

        .toggle-btn {
            font-size: 1.4rem;
            cursor: pointer;
        }

        footer {
            background-color: #111;
            color: #aaa;
            padding: 0.25rem;
            text-align: center;
            transition: background-color 0.4s ease, color 0.3s ease;
        }

        body.dark-mode footer {
            background-color: var(--footer-dark);
            color: #888;
        }

        body > .container {
            flex: 1;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg fixed-top">
        <div class="container-fluid px-4">
            <a class="navbar-brand" href="/">BlogBuilder</a>
            <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navMenu">
                <ul class="navbar-nav me-3">
                    <li class="nav-item"><a class="nav-link" href="/User/Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Blog/Index">All Blogs</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">About</a></li>
                </ul>
            </div>
            <i class="fas fa-moon toggle-btn ms-3" id="themeToggle" title="Toggle Theme"></i>
        </div>
    </nav>

    <div class="container pt-5 mt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <p>© BlogBuilder — Designed and Developed by Vedant Zope</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        const themeToggle = document.getElementById("themeToggle");
        const body = document.body;

        // Load theme on page load
        const isDark = localStorage.getItem("theme") === "dark";
        if (isDark) {
            body.classList.add("dark-mode");
            themeToggle.classList.remove("fa-moon");
            themeToggle.classList.add("fa-sun");
        }

        themeToggle.addEventListener("click", () => {
            body.classList.toggle("dark-mode");
            const isDarkNow = body.classList.contains("dark-mode");
            localStorage.setItem("theme", isDarkNow ? "dark" : "light");
            themeToggle.classList.toggle("fa-moon");
            themeToggle.classList.toggle("fa-sun");
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>

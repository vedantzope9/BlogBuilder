@{
    ViewData["Title"] = "Welcome to BlogBuilder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .hero {
        padding: 6rem 1rem 4rem;
        text-align: center;
    }

    .hero h1 {
        font-size: 3.5rem;
        font-weight: 650;
        background: linear-gradient(to right, #9b59b6, #e67e22);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .hero p {
        font-size: 1.3rem;
        max-width: 720px;
        margin: 1rem auto 2rem;
    }

    .cta-btn {
        padding: 0.75rem 2.2rem;
        border-radius: 50px;
        font-size: 1.1rem;
        background: linear-gradient(to right, #8e44ad, #5e2a7a);
        color: white;
        border: none;
        box-shadow: 0 0 12px rgba(138, 43, 226, 0.5);
        transition: all 0.3s ease;
    }

    .cta-btn:hover {
        transform: scale(1.05);
        box-shadow: 0 0 20px rgba(138, 43, 226, 0.6);
    }

    .features {
        padding: 4rem 1rem;
    }

    .feature-box {
        background-color: #ffffff;
        border-radius: 12px;
        padding: 2rem;
        transition: background 0.4s, transform 0.3s, border 0.4s;
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.08);
        border: 2px solid black;
    }

    body.dark-mode .feature-box {
        background-color: #1e1e1e;
        border: 2px solid white; 
        box-shadow: 0 4px 16px rgba(255, 255, 255, 0.08);
    }


    .feature-box:hover {
        transform: translateY(-5px);
    }

    .feature-box i {
        font-size: 2.5rem;
        color: #8e44ad;
        margin-bottom: 1rem;
    }

    @@media (max-width: 768px) {
        .hero h1

    {
        font-size: 2.2rem;
    }

    .hero p {
        font-size: 1.1rem;
    }

    }
</style>

<section class="hero">
    <h1>Welcome to BlogBuilder</h1>
    <p>Unleash your creativity and share your thoughts with the world. Start writing, reading, and commenting on blogs with ease.</p>
    <a id="startBtn" class="btn cta-btn">Get Started</a>
</section>

<section class="features text-center">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-box h-100">
                    <i class="fas fa-pen-nib"></i>
                    <h4>Modern Blog Editor</h4>
                    <p>Create beautiful content with a markdown-supported, autosaving, and responsive editor.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-box h-100">
                    <i class="fas fa-comments"></i>
                    <h4>Engage via Comments</h4>
                    <p>Read and leave comments on any blog. Foster discussion and exchange ideas seamlessly.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-box h-100">
                    <i class="fas fa-book"></i>
                    <h4>Explore & Bookmark</h4>
                    <p>Search by topic, save favorites, and build your reading library with curated content.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    // On first load of session, clear any leftover data
    if (!sessionStorage.getItem("sessionStarted")) {
        sessionStorage.setItem("sessionStarted", "true");
        localStorage.removeItem("jwtToken");
        localStorage.removeItem("username");
        localStorage.removeItem("userid");
    }

    // Handle Get Started button click
    document.getElementById("startBtn").addEventListener("click", function (e) {
        e.preventDefault();
        const token = localStorage.getItem("jwtToken");

        if (token) {
            window.location.href = "/Blog/Index";
        } else {
            window.location.href = "/User/LoginUser"; 
        }
    });
</script>
